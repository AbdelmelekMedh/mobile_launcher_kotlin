<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AboutItemNavFragment">
    <LinearLayout
        android:id="@+id/linearAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/near_platinum"
        android:layoutDirection="ltr"
        tools:context=".UI.About">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#008aa1">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/textView5"
                    android:background="@android:color/transparent"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_head"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/interstateplus_light"
                    android:text="@string/about"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#3e3e3e"
                android:textSize="23sp"
                android:text="@string/about_titel" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="34dp"
                android:textColor="#3e3e3e"
                android:textSize="14.7sp"
                android:text="@string/about_text" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="34dp"
                android:autoLink="web"
                android:textStyle="bold"
                android:textSize="19sp"
                android:clickable="true"
                android:text="www.hellodati.com" />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="34dp"
                android:autoLink="email"
                android:textStyle="bold"
                android:textSize="19sp"
                android:clickable="true"
                android:text="contact@hellodati.com" />


        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>