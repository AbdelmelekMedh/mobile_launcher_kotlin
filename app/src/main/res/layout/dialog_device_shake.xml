<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layoutDirection="ltr"
android:layout_marginHorizontal="10dp"
android:background="@color/white"
android:paddingBottom="50dp"
app:cardCornerRadius="5dp"
android:paddingTop="50dp">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:elevation="90dp"
        android:src="@drawable/ic_btn_close" />
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/filter_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/title"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/interstate_mono"
                android:text="@string/device_info"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_header"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txtGsfId"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interstateplus_light"
                    android:layout_margin="10dp"
                    android:textColor="#434343"
                    android:textSize="12sp"
                    android:text="@string/device_gsf"/>

                <TextView
                    android:id="@+id/version"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interstateplus_light"
                    android:layout_margin="10dp"
                    android:textColor="#434343"
                    android:textSize="12sp"
                    android:text="@string/device_version"/>

                <TextView
                    android:id="@+id/room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/interstateplus_light"
                    android:text="@string/device_room"
                    android:textColor="#434343"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_gsf_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interstateplus_light"
                   android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#434343"
                    android:textSize="12sp"
                    android:text="None"/>

                <TextView
                    android:id="@+id/txt_version_app"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interstateplus_light"
                    android:layout_margin="10dp"
                    android:textColor="#434343"
                    android:textSize="12sp"
                    android:text="None"/>

                <TextView
                    android:id="@+id/txt_room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/interstateplus_light"
                    android:text="None"
                    android:textColor="#434343"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>







        <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/inf">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_ok"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:backgroundTint="#982424"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/interstate_mono"
                            android:text="OK"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>