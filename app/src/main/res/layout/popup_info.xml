<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingLeft="15dp"
    android:paddingTop="50dp"
    android:paddingRight="15dp"
    android:paddingBottom="50dp">


    <ImageView
        android:id="@+id/icon_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="130dp"
        android:elevation="10dp"
        android:src="@drawable/ic_service_chambre" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_popup_info_call" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="end"
            android:text="SERVICE DE CHAMBRE"
            android:textColor="#193f65"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/description_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.04"
            android:text="@string/info"
            android:textColor="#0e1828"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="114dp"
            android:layout_height="39.3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_valider"
            android:backgroundTint="#193f65"
            android:text="OK"
            android:textColor="#f5e100"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>